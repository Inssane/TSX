{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "lib": [
            "es6",
            "dom",
            "es2018.promise",
            "es2016.array.include",
            "es2017.object"
        ],
        "jsx": "react",
        "strict": true,
        "strictNullChecks": true,
        "baseUrl": "./",
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "paths": {
            "config": ["config.json"],
            "locale/*": ["src/locales/*"],
            "components/*": ["src/components/*", "js/components/*"],
            "src/*": ["./src/*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}